@page
@using Microsoft.AspNetCore.Http.Features
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Двухфакторная аутентификация (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage"
         for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
@{
    ITrackingConsentFeature? consentFeature = HttpContext.Features.Get<ITrackingConsentFeature>();

    @if (consentFeature?.CanTrack ?? true)
    {
        @if (Model.Is2faEnabled)
        {
            if (Model.RecoveryCodesLeft == 0)
            {
                <div class="alert alert-danger">
                    <strong>Коды восстановления закончились.</strong>
                    <p>Перед входом по коду <a asp-page="./GenerateRecoveryCodes">создайте новый набор кодов</a>.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft == 1)
            {
                <div class="alert alert-danger">
                    <strong>Остался 1 код восстановления.</strong>
                    <p>Можно <a asp-page="./GenerateRecoveryCodes">создать новый набор кодов</a>.</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft <= 3)
            {
                <div class="alert alert-warning">
                    <strong>Осталось @Model.RecoveryCodesLeft код(а) восстановления.</strong>
                    <p>Рекомендуем <a asp-page="./GenerateRecoveryCodes">создать новый набор кодов</a>.</p>
                </div>
            }

            if (Model.IsMachineRemembered)
            {
                <form method="post"
                      style="display: inline-block">
                    <button type="submit"
                            class="btn btn-primary">Забыть этот браузер
                    </button>
                </form>
            }

            <a asp-page="./Disable2fa"
               class="btn btn-primary">Отключить 2FA</a>

            <a asp-page="./GenerateRecoveryCodes"
               class="btn btn-primary">Сбросить коды восстановления</a>
        }

        <h4>Приложение-аутентификатор</h4>

        @if (!Model.HasAuthenticator)
        {
            <a id="enable-authenticator"
               asp-page="./EnableAuthenticator"
               class="btn btn-primary">Добавить приложение</a>
        }
        else
        {
            <a id="enable-authenticator"
               asp-page="./EnableAuthenticator"
               class="btn btn-primary">Настроить приложение</a>

            <a id="reset-authenticator"
               asp-page="./ResetAuthenticator"
               class="btn btn-primary">Сбросить настройки приложения</a>
        }
    }
    else
    {
        <div class="alert alert-danger">
            <strong>Политика приватности и cookies не принята.</strong>
            <p>Примите политику, чтобы включить двухфакторную аутентификацию.</p>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
