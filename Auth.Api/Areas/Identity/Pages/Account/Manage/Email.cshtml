@page
@model EmailModel
@{
    ViewData["Title"] = "Почта";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage"
         for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="email-form"
              method="post">
            <div asp-validation-summary="All"
                 class="text-danger"
                 role="alert"></div>
            <div class="form-floating mb-3 input-group">
                <input asp-for="Email"
                        class="form-control"
                        placeholder="Введите почту"
                        disabled />
                <div class="input-group-append">
                    <span class="h-100 input-group-text text-success font-weight-bold" style="border-top-left-radius: 0; border-bottom-left-radius: 0;">✓</span>
                </div>
                <label asp-for="Email"
                        class="form-label"></label>
            </div>
  
